<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/myteacher_trans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sentReqTutorNameTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/sentReqTutorGradeTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/sentReqTutorExperienceTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/sentReqTutorDegreeView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="TextView" />

            <Button
                android:id="@+id/cancelRequestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="cancelRequestButtonClicked"
                android:text="@string/cancelRequest" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>